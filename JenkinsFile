pipeline {
    agent { label 'agents' }

    stages {
        stage('Checkout') {
            steps {
                checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[
                                                    url: 'https://github.com/SReddy1995/sample-webapp',
                                                    credentialsId: 'github_token'
                                            ]]
                ])
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy to Artifactory') {
            steps {
                configFileProvider([configFile(fileId: '3d5ee8c1-d010-4487-b1f3-cf5922cbcb8c', variable: 'MAVEN_SETTINGS')]) {
                    sh 'mvn deploy -s $MAVEN_SETTINGS'
                }
            }
        }
        stage("Docker Build") {
            steps {
                sh 'docker build -t sample_webapp .'
            }
        }
        stage("Docker Image Push") {
            steps {
                withCredentials([[
                                         $class: 'AmazonWebServicesCredentialsBinding',
                                         credentialsId: 'aws-ecr-creds'
                                 ]]) {
                    sh '''
                        aws ecr get-login-password --region ap-southeast-1 | docker login --username AWS --password-stdin 515614487953.dkr.ecr.ap-southeast-1.amazonaws.com
                        docker tag sample_webapp:latest 515614487953.dkr.ecr.ap-southeast-1.amazonaws.com/sample_webapp:latest
                        docker push 515614487953.dkr.ecr.ap-southeast-1.amazonaws.com/sample_webapp:latest
                    '''
                }
            }
        }
    }
}
